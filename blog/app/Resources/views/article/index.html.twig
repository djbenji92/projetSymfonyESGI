{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="content">
      <h1>Espace adminsitrateur:  liste des articles</h1>
      <a href="{{path('article_new')}}">Cr√©er un nouveau article</a>
      <table class="table table-striped table-hover" style="margin:60px 0">
          <thead>
              <tr>
                  <th>Slug</th>
                  <th>Titre</th>
                  <th>Resume</th>
                  <th>Date</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
          {% for article in articles %}
              <tr>
                  <td><a href="{{ path('article_show', { 'slug': article.slug }) }}">{{ article.slug }}</a></td>
                  <td>{{ article.titre }}</td>
                  <td>{{ article.resume }}</td>
                  <td>{{ article.date|date('Y-m-d') }}</td>
                  <td><a href="{{ path('article_show', { 'slug': article.slug }) }}">show</a>
                      <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                  </td>
              </tr>
          {% endfor %}
          </tbody>
      </table>

      <div class="itemArticle">
          <div class="photoArticle">

          </div>
          <div class="contentArticle">
            <div class="titreArticle">
              Exemple d'article
            </div>
            <div class="resumeArticle">
              Voici un exemple d'article. A vous de jouer !
            </div>
          </div>
      </div>

      </div>
    </div>
{% endblock %}
