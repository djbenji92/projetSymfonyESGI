{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="content">
      <h1>Espace adminsitrateur:  liste des articles</h1>
      <a href="{{path('article_new')}}">Cr√©er un nouveau article</a>
      <table>
          <thead>
              <tr>
                  <th>Slug</th>
                  <th>Titre</th>
                  <th>Resume</th>
                  <th>Contenu</th>
                  <th>Date</th>
                  <th>Validate</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
          {% for article in articles %}
              <tr>
                  <td><a href="{{ path('article_show', { 'slug': article.slug }) }}">{{ article.slug }}</a></td>
                  <td>{{ article.titre }}</td>
                  <td>{{ article.resume }}</td>
                  <td>{{ article.contenu }}</td>
                  <td>{{ article.date|date('Y-m-d') }}</td>
                      <ul>
                          <li>
                              <a href="{{ path('article_show', { 'slug': article.slug }) }}">show</a>
                          </li>
                          <li>
                              <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                          </li>
                      </ul>
                  </td>
              </tr>
          {% endfor %}
          </tbody>
      </table>

      <ul>
          <li>
              <a href="{{ path('article_new') }}">Create a new entry</a>
          </li>
      </ul>
    </div>
{% endblock %}
