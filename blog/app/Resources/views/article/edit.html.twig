{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="content">
      <h1>Edition d'un article</h1>

      {{ form_start(edit_form) }}
        <div class="col-md-10">
          <div class="form-group clearfix">
              <div class="col-md-4">
                  {{ form_label(edit_form.titre, null, {'label_attr': {'style':'color:red' }}) }}
                  {{ form_errors(edit_form.titre) }}
              </div>
              <div class="col-md-8">
                  {{ form_widget(edit_form.titre, { 'attr':  {
                    'class': 'toto'
                }}) }}
              </div>
          </div>

          
          <div class="col-md-2">
              {{ form_label(edit_form.published, null, {'label_attr': {'style':'color:red' }}) }}
              {{ form_errors(edit_form.published) }}
          </div>
          <div class="col-md-2">
              {{ form_widget(edit_form.published, { 'attr':  {
                'class': 'toto'
            }}) }}
          </div>
      
      
          <div class="col-md-2">
          {{ form_label(edit_form.date, null, {'label_attr': {'class':'control-label' }}) }}
          {{ form_errors(edit_form.date) }}
          </div>
          <div class="input-group date">
              {{ form_widget(edit_form.date, { 'attr':  {
                  'class': 'form-control'
              }}) }}

              <span class="input-group-btn">
                  <button type="button" class="btn btn-primary date-set"><i class="fa fa-calendar"></i></button>
              </span>
          </div>
          

          <div class="form-group clearfix">
              <div class="col-md-4">
                  {{ form_label(edit_form.categories, null, {'label_attr': {'style':'color:red' }}) }}
                  {{ form_errors(edit_form.categories) }}
              </div>
              <div class="col-md-8">
                  {{ form_widget(edit_form.categories, { 'attr':  {
                    'class': 'toto'
                }}) }}
              </div>
          </div>

          <div class="form-group clearfix">
              <div class="col-md-4">
                  {{ form_label(edit_form.resume, null, {'label_attr': {'style':'color:red' }}) }}
                  {{ form_errors(edit_form.resume) }}
              </div>
              <div class="col-md-8">
                  {{ form_widget(edit_form.resume, { 'attr':  {
                    'class': 'toto'
                }}) }}
              </div>
          </div>

          <div class="form-group clearfix">
              <div class="col-md-12">
                  {{ form_label(edit_form.contenu, null, {'label_attr': {'style':'color:red' }}) }}
                  {{ form_errors(edit_form.contenu) }}
              </div>
              <div class="col-md-12">
                  {{ form_widget(edit_form.contenu, { 'attr':  {
                    'class': 'toto'
                }}) }}
              </div>
          </div>
        </div>

          

          <input class="btn btn-info col-md-3" type="submit" value="Edit" style="margin-left:30px" />
      {{ form_end(edit_form) }}

      <ul>
          <li>
              <a href="{{ path('article_index') }}">Back to the list</a>
          </li>
      </ul>
    </div>

    <script>
    CKEDITOR.replace( 'article[contenu]' );
    </script>
{% endblock %}
