{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="content">
      <h1>User list</h1>

      <table class="table table-striped table-hover" style="margin:60px 0">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>username</th>
                  <th>role</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
          {% for user in users %}
              <tr>
                  <td><a href="{{ path('user_edit', { 'id': user.id }) }}">{{ user.id }}</a></td>
                  <td>{{ user.username }}</td>
                  <td>{{ user.roles[0] }}</td>
                  <td> <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a> </td>
              </tr>
          {% endfor %}
          </tbody>
      </table>

      <ul>
          <li>
              <a href="{{ path('article_new') }}">Create a new entry</a>
          </li>
      </ul>
    </div>
{% endblock %}
