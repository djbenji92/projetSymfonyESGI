{% extends 'base.html.twig' %}

{% block body %}
    <h1>Follower</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ follower.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ follower.date }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('follower_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('follower_edit', { 'id': follower.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
